@model IEnumerable<CallViewModel>

<div id="toolbar" class="small">
</div>
<table id="list" class="table table-hover table-sm table-bordered small w-auto col-10"
       data-toggle="table"
       data-toolbar="#toolbar"            
       data-sortable="true"
       data-sort-name="callDate"
       data-custom-sort="customSort"
       data-sort-order="desc"
       data-silent-sort="false"
       data-show-export="true"
       data-ajax="ajaxRequest"
       data-side-pagination="server"
       data-pagination="true"
       data-page-size="500"
       data-pagination-v-align="both"
       data-show-pagination-switch="false"
       data-page-list="[]"
       data-search="false">
    <thead>
        <tr>
            <th class="align-middle" data-width='10%' data-field="src" data-sortable="true">Кто звонил (номер) </th>
            <th class="align-middle" data-width='20%' data-field="srcName" data-sortable="true">Кто звонил (имя)</th>
            <th class="align-middle" data-width='10%' data-field="dst"  data-sortable="true">Кому звонил (номер)</th>
            <th class="align-middle" data-width='20%' data-field="dstName"  data-sortable="true">Кому звонил (имя)</th>
            <th class="align-middle" data-width='15%' data-field="callDate" data-sortable="true">Дата звонка <br /> (с учётом часового пояса)</th>
            <th class="align-middle" data-width='10%' data-field="duration" data-sortable="true">Длительность</th>
            <th class="align-middle" data-width='15%' data-field="disposition" data-sortable="true">Статус</th>
        </tr>
    </thead>
</table>
